[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd

[Service]
Type=notify
ExecStart=/usr/local/bin/etcd \
  --name {{ inventory_hostname }} \
  --peer-client-cert-auth \
  --peer-trusted-ca-file=/home/{{ ansible_user }}/ssl/ca.crt \
  --peer-cert-file=/home/{{ ansible_user }}/ssl/etcd-{{ inventory_hostname }}.crt \
  --peer-key-file=/home/{{ ansible_user }}/ssl/etcd-{{ inventory_hostname }}.key \
  --initial-advertise-peer-urls https://{{ ansible_host }}:2380 \
  --listen-peer-urls https://{{ ansible_host }}:2380 \
  --cert-file=/home/{{ ansible_user }}/ssl/etcd-server.crt \
  --key-file=/home/{{ ansible_user }}/ssl/etcd-server.key \
  --advertise-client-urls https://{{ ansible_host }}:2379 \
  --listen-client-urls https://{{ ansible_host }}:2379,https://127.0.0.1:2379 \
  --initial-cluster-token etcd-cluster-0 \
  --initial-cluster {% for host in groups['controllers'] %}{{ host }}=https://{{ hostvars[host].ansible_host }}:2380{% if not loop.last %},{% endif %}{% endfor %}\
  --initial-cluster-state new \
  --data-dir=/var/lib/etcd
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
